<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respiratory Rate (RR)"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" RR in 1st 15 Seconds :"
        android:textColor="#003366"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/rr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" RR in 2nd 15 Seconds :"
        android:textColor="#003366"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/rr3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" RR in 3rd 15 Seconds :"
        android:textColor="#003366"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/rr4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" RR in 4th 15 Seconds :"
        android:textColor="#003366"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/maxrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Maximum RR :"
        android:textSize="18dp" /><!--android:textColor="#000066"-->
    <TextView
        android:id="@+id/minrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Minimum RR :"
        android:textSize="18dp" /><!--android:textColor="#000066"-->
    <TextView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/norm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Normal Range : 12-25 breaths/minute"
        android:textColor="#330066"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#CC0000"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/recordRR"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:onClick="toMonitor"
            android:text="Repeat"
            android:background="#003366"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/space5"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/saveRR"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:onClick="save"
            android:text="Save"
            android:background="#003366"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</LinearLayout>