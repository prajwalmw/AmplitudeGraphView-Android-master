<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/realtiveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Name: " />

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nameId"
            android:layout_toRightOf="@+id/nameId"
            android:hint="Enter your name" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/realtiveAge"
        android:layout_width="match_parent"
        android:layout_below="@id/realtiveName"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Age: "/>

        <EditText
            android:id="@+id/Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/ageId"
            android:layout_toRightOf="@+id/ageId"
            android:hint="Enter your age(yrs)"
            android:inputType="number" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realtiveSex"
        android:layout_width="match_parent"
        android:layout_below="@id/realtiveAge"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sexId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Gender: "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your gender"
            android:layout_toEndOf="@+id/sexId"
            android:layout_toRightOf="@+id/sexId"
            android:id="@+id/Sex" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realtiveHeight"
        android:layout_width="match_parent"
        android:layout_below="@id/realtiveSex"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heightId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Height: "/>

        <EditText
            android:id="@+id/Height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toEndOf="@+id/heightId"
            android:layout_toRightOf="@+id/heightId"
            android:hint="Enter your Height (cm)" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/realtiveWeight"
        android:layout_width="match_parent"
        android:layout_below="@id/realtiveHeight"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weightId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Weight: "/>

        <EditText
            android:id="@+id/Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/weightId"
            android:layout_toRightOf="@+id/weightId"
            android:hint="Enter your Weight (kg)"
            android:inputType="number" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realtivePlace"
        android:layout_width="match_parent"
        android:layout_below="@id/realtiveWeight"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/placeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Place: "/>

        <EditText
            android:id="@+id/Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/placeId"
            android:layout_toRightOf="@+id/placeId"
            android:hint="Enter Place" />

    </RelativeLayout>



